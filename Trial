<script>
    const S = {
        'HP': { id: 'currentHP', in: 'hpIn', max: 76 },
        'LOH': { id: 'currentLOH', in: 'lohIn', max: 40 },
        'GP': { id: 'currentGP', in: 'gpIn', max: 99999 },
        'POL': { id: 'polHP', in: 'polIn', max: 60 }
    };

    function adj(k, m) {
        const d = document.getElementById(S[k].id);
        const v = parseInt(d.textContent) + (parseInt(document.getElementById(S[k].in).value) * m);
        d.textContent = Math.max(0, Math.min(S[k].max, v));
    }

    function openTab(n) {
        document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.getElementById(n).classList.add('active');
        event.currentTarget.classList.add('active');
    }
</script>
